<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>d1b0b4f8-1e1c-4c7b-9e72-1c4b5e0f2a9d</Id>
  <Version>2.0.0.1</Version>
  <ProviderName>MOVE Bank</ProviderName>
  <DefaultLocale>en-AU</DefaultLocale>

  <DisplayName DefaultValue="SMS Verification Code (v2)" />
  <Description DefaultValue="Adds a compose ribbon button to set ClickSend recipient (if missing) and insert a 6-digit verification code into the Subject." />

  <IconUrl DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-80.png" />
  <SupportUrl DefaultValue="https://it-movebank.github.io/SMS-Generator/" />

  <AppDomains>
    <AppDomain>https://it-movebank.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <!-- SourceLocation required for some deployment flows -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://it-movebank.github.io/SMS-Generator/commands.html" />
        <RequestedHeight>200</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- FunctionFile points to an HTML page that contains/loads all JS functions for command buttons -->
          <FunctionFile resid="Commands.Url" /> <!-- [1](https://learn.microsoft.com/en-us/javascript/api/manifest/functionfile?view=word-js-preview) -->

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="move.smsverify.group">
                <Label resid="Group.Label" />

                <!-- SINGLE BUTTON ONLY -->
                <Control xsi:type="Button" id="move.smsverify.insertcode">
                  <Label resid="Button.Label" />
                  <Supertip>
                    <Title resid="Button.Title" />
                    <Description resid="Button.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16" />
                    <bt:Image size="32" resid="Icon.32" />
                    <bt:Image size="80" resid="Icon.80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>insertVerifyCode</FunctionName>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-16.png" />
        <bt:Image id="Icon.32" DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-32.png" />
        <bt:Image id="Icon.80" DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-80.png" />
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://it-movebank.github.io/SMS-Generator/commands.html" />
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="SMS Tools" />
        <bt:String id="Button.Label" DefaultValue="Insert 6-digit code" />
        <bt:String id="Button.Title" DefaultValue="Insert verification code" />
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="Button.Tooltip" DefaultValue="If needed, prompts for a mobile number to set the ClickSend recipient, then inserts a 6-digit code into the Subject." />
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
