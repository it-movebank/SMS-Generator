<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>8f3c9b9e-4c6a-4e2a-9a2b-6c6f1d9e7a41</Id>
  <Version>2.0.0.6</Version>
  <ProviderName>MOVE Bank</ProviderName>
  <DefaultLocale>en-AU</DefaultLocale>
  <DisplayName DefaultValue="SMS Verification Tool" />
  <Description DefaultValue="One-click tool to set ClickSend recipient and insert 6-digit code." />

  <IconUrl DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-80.png" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation resid="Commands.Url" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="move.smsverify.group">
                <Label resid="Group.Label" />
                <Control xsi:type="Button" id="move.smsverify.insertcode">
                  <Label resid="Button.Label" />
                  <Supertip>
                    <Title resid="Button.Title" />
                    <Description resid="Button.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16" />
                    <bt:Image size="32" resid="Icon.32" />
                    <bt:Image size="80" resid="Icon.80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>insertVerifyCode</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-16.png" />
        <bt:Image id="Icon.32" DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-32.png" />
        <bt:Image id="Icon.80" DefaultValue="https://it-movebank.github.io/SMS-Generator/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://it-movebank.github.io/SMS-Generator/commands.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="SMS Tools" />
        <bt:String id="Button.Label" DefaultValue="Insert Code" />
        <bt:String id="Button.Title" DefaultValue="SMS Verification" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="Button.Tooltip" DefaultValue="Sets recipient and inserts code into subject." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
